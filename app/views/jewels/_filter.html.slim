article id="filter"
		javascript:
			$(document).ready(function(){
				$("#filter_form").hide();
				var flg = false;
				$("#filter_title").click(function(){
					$("#filter_form").slideToggle();
					if( flg == false ){
						$(this).text("\u25BC フィルタを隠す");
						flg = true;
					}else{
						$(this).text("\u25BA フィルタを表示する");
						flg = false;
					}
				});
				var start_date = #{{@startDate.to_json}}
				flatpickr('.start_data',{
					"time_24hr": true,
					"dateFormat": "Y-m-d",
					"timeFormat": "H:i",
					"enableTime": true,
					"defaultDate": start_date,
				});
				var end_date = #{{@endDate.to_json}};
				flatpickr('.end_data',{
					"time_24hr": true,
					"dateFormat": "Y-m-d",
					"timeFormat": "H:i",
					"enableTime": true,
					"defaultDate": end_date,
				});
			});
	
		.section
				h2 砕いたジュエルの数
				.content
						h3#filter_title &#9658; フィルタを表示する
						
						#filter_form
							= form_tag( {:action => :index}, {:method => :post, enforce_utf8: false} )
								.option
									= label_tag( "filter[dispCheck]", "表示" )
								.form = select_tag( "filter[dispFlag]", options_for_select( @dispOption, :selected => @dispFlag ) )
								.option
									= label_tag( "filter[usageCheck]", "用途" )
								.form = select_tag( "filter[usageFlag]", options_for_select( @usageOption, :selected => @usageFlag, :title => "イベント" ) )
								.option
									= check_box_tag( "filter[eventCheck]", true, true )
									= label_tag( "filter[eventCheck]", "イベント" )
								.form = select_tag( "filter[event]", options_from_collection_for_select( @eventOption, :name, :name, :selected => @eventFlag ) )
								.option
									 = label_tag( "filter[dispCheck]", "期間" )
								.form
									= text_field_tag( "filter[start_date]", nil, {:class => "flatpickr-input start_data"} )
									span -
									= text_field_tag( "filter[end_date]", nil, {:class => "flatpickr-input end_data"} )
								.submit = submit_tag( "適用", :name => nil )
								.clearfix
						
