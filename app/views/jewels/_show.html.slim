article id="show"
    section
        .title
            h2 砕いたジュエルのリスト
        .content
            ul
                li style="display: inline-block;" = link_to "全部表示する", controller: :jewels, action: :index, dispFlag: 0
                li style="display: inline-block;" = link_to "未削除のみ", controller: :jewels, action: :index, dispFlag: 1
                li style="display: inline-block;" = link_to "削除済みのみ", controller: :jewels, action: :index, dispFlag: 2
            =form_tag( {:action => :delete}, {:method => :get, enforce_utf8: false} )
                table
                    thead
                        tr
                            th id
                            th 日付
                            th 砕いた数
                            th 削除
                    tbody
                        - @list.each do |entry|
                            tr class="#{cycle("odd","even")} #{entry[:delflag] == true ? ' delete' : ''} "
                                td = entry[:id]
                                td = entry[:date].strftime("%y/%m/%d %H:%M")
                                td = entry[:count]
                                - if entry[:delflag] == true then
                                    td = link_to "restore", controller: :jewels, action: :restore, id: entry[:id]
                                - else
                                    td = link_to "delete", controller: :jewels, action: :delete, id: entry[:id]
